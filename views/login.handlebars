<div class="container login mt-5">
  <div class="row">
    <div class="col col-lg-12">
      <div class="jumbotron text-center font-weight-bold">
        <h1>Log In</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-lg-12">
      <div class="card p-5">
        <form>
          <div class="form-group">
            <label for="userName">UserName</label>
            <input type="email" class="form-control" id="userName" placeholder="Your email here." />
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" class="form-control" id="userPassword" placeholder="Your Password here." />
          </div>

          <button type="submit" class="btn btn-primary" id="btnSubmit">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
